{
  "name": "text-to-canvas",
  "version": "1.0.0",
  "description": "Render multiline plain or rich text into textboxes on HTML5 Canvas with automatic line wrapping",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stefcameron/text-to-canvas.git"
  },
  "author": "Stefan Cameron <stefan@stefcameron.com> (https://stefcameron.com/)",
  "contributors": [
    "Geon George <me@geongeorge.com> (https://geongeorge.com/)"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stefcameron/text-to-canvas/issues"
  },
  "homepage": "https://stefcameron.github.io/text-to-canvas/",
  "keywords": [
    "vue",
    "react",
    "library",
    "canvas",
    "richtext",
    "es6"
  ],
  "sideEffects": false,
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "main": "./dist/canvas-txt.umd.min.js",
  "module": "./dist/canvas-txt.esm.min.js",
  "types": "./dist/canvas-txt.d.ts",
  "exports": {
    ".": {
      "import": "./dist/canvas-txt.esm.min.js",
      "require": "./dist/canvas-txt.umd.min.js",
      "types": "./dist/canvas-txt.d.ts"
    }
  },
  "engines": {
    "node": "20",
    "npm": "10"
  },
  "scripts": {
    "build": "tsc && vite build --emptyOutDir --config config/vite.config.ts && npm run build:dts && cp ./dist/canvas-txt.esm.min.js ./dist/canvas-txt.mjs",
    "build:docs": "tsc && vite build --config config/vite.config.docs.ts",
    "build:dts": "tsup src/canvas-txt/index.ts --dts-only && mv dist/index.d.ts dist/canvas-txt.d.ts",
    "prepare": "npm run build",
    "start": "vite serve --config config/vite.config.docs.ts",
    "test": "npm run test:unit && npm run build",
    "test:unit": "vite-node ./src/node-test.ts"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.202",
    "@types/offscreencanvas": "^2019.7.3",
    "@vitejs/plugin-vue": "^5.0.4",
    "element-plus": "^2.6.0",
    "lodash": "^4.17.21",
    "tsup": "^8.0.2",
    "typescript": "^5.4.2",
    "unplugin-auto-import": "^0.17.5",
    "unplugin-vue-components": "^0.26.0",
    "vite": "^5.1.5",
    "vite-node": "^1.3.1",
    "vue": "^3.4.21"
  }
}
